#include<iostream>
using namespace std;
class sum
{
	int a,b,total;
	public:
		void getdata();
		void display();
};
void sum::getdata()
{
	cout<<"\n enter the value of a and b";
	cin>>a>>b;
}
void sum::display()
{
	total=a+b;
	cout<<"\n the sum of a and b="<<total;
}
int main()
{
	sum s;
	s.getdata();
	s.display();
}
